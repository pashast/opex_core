{{ header }}{{ column_left }}
{% import 'extension/opex/admin/view/template/v101/inc/form_rows.twig' as form_rows %}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form id="form-module" action="{{ save }}" method="post" data-oc-toggle="ajax">
          {{ form_rows.buttonYN('other_opexcore_status', other_opexcore_status, entry_status, '', 0, []) }}
          {{ form_rows.input('other_opexcore_ac_limit', other_opexcore_ac_limit, entry_ac_limit, '', 0, [], 'number') }}
          {{ form_rows.input('other_opexcore_ac_full_limit', other_opexcore_ac_full_limit, entry_ac_full_limit, '', 0, [], 'number') }}
          {{ form_rows.buttonYN('other_opexcore_lazy_script', other_opexcore_lazy_script, entry_lazy_script, help_lazy_script, 0, []) }}
          {{ form_rows.buttonYN('other_opexcore_mobile_detect', other_opexcore_mobile_detect, entry_mobile_detect, help_mobile_detect, 0, []) }}
          {{ form_rows.input('other_opexcore_check_post_size', other_opexcore_check_post_size, entry_check_post_size, help_check_post_size, 0, [], 'number') }}
          {{ form_rows.input('other_opexcore_mv_custom_class', other_opexcore_mv_custom_class, entry_mv_custom_class, '', 0, [],) }}
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
